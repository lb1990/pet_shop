<view>
  <view>{{year}}年{{month}}月{{day}}日</view>
  <picker-view indicator-style='height:20px;' style='width:100%;height:200px' value='{{value}}' bindchange='bindChange'>
    <picker-view-column>
      <view wx:for="{{years}}">{{item}}年</view>
    </picker-view-column>
    <picker-view-column>
      <view wx:for="{{months}}">{{item}}月</view>
    </picker-view-column>
    <picker-view-column>
      <view wx:for="{{days}}">{{item}}日</view>
    </picker-view-column>
  </picker-view>
</view>